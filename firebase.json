{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "rewrites": [
      {
        "source": "/documentation",
        "destination": "/documentation/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
